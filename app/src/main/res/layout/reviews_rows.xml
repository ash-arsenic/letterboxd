<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="6dp"
    android:background="@drawable/review_border"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/movie_title_r"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Forrest Gump (2021)"
        style="@style/review_title"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_r"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Karsten"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratings"
        app:srcCompat="@drawable/movie_poster" />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="10dp"
        android:text="Just best looking Hollywood movie ever made"
        android:textStyle="italic"
        android:textSize="16sp"
        android:lineHeight="25dp"
        android:letterSpacing="0.15"
        app:layout_constraintStart_toEndOf="@+id/poster"
        app:layout_constraintTop_toBottomOf="@+id/ratings" />

    <TextView
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="5"
        style="@style/ratings"
        android:drawableRight="@drawable/ic_baseline_star_rate_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_title_r" />
</androidx.constraintlayout.widget.ConstraintLayout>